<h1>Pets Index</h1>

<% @pets.each do |pet| %>
  <h3>
    Pet: <%= pet.name %>
    - <%= link_to "Edit Pet", "/pets/#{pet.id}" %>
    - <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %>
  </h3>
  <img src="<%= pet.image %>" width="150" height="120">
  <ul>
    <li>Approximate Age: <%= pet.age %></li>
    <li>Sex: <%= pet.sex %></li>
    <li>Located at: <%= pet.shelter.name %></li>
  </ul>
<% end %>
