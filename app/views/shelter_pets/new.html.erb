<%= link_to "Navigate to Pets Index", "/pets" %> -
<%= link_to "Navigate to Shelters Index", "/shelters" %></br>

<h1>Create New Pet Form</h1>

<%= form_tag "/shelters/#{@shelter.id}/pets", method: :post do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %></br>

  <%= label_tag :name %>
  <%= text_field_tag :name %></br>

  <%= label_tag :age %>
  <%= text_field_tag :age %></br>

  <%= label_tag :sex %>
  <%= text_field_tag :sex %></br>

  <%= label_tag :description %>
  <%= text_field_tag :description %></br>

  <%= label_tag :adoption_status %>
  <%= text_field_tag :adoption_status %></br>

  <%= submit_tag "Create Pet" %>
<% end %>
