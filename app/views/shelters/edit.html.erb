<%= link_to "Navigate to Shelters Index", "/shelters" %></br>

<h1>Edit: <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h1>

<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %></br>

  <%= label_tag :address %>
  <%= text_field_tag :address %></br>

  <%= label_tag :city %>
  <%= text_field_tag :city %></br>

  <%= label_tag :state %>
  <%= text_field_tag :state %></br>

  <%= label_tag :zip %>
  <%= text_field_tag :zip %></br>

  <%= submit_tag "Submit Update" %>
  <% end %>
